<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Wedding Photo Drop</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <meta name="robots" content="noindex,nofollow" />
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />
  <link rel="stylesheet" href="/css/styles.css" />
</head>
<body class="rsvp-page">
  <%- include('partials/nav', { navLinks, brandHref: '/' }) %>

  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <div class="card shadow-sm rsvp-card-shell">
          <div class="card-body p-4 p-lg-5">
            <div class="d-flex justify-content-between align-items-center mb-3">
              <div>
                <p class="text-uppercase text-muted small mb-1">Rofel & Julie Ann</p>
                <h1 class="h4 mb-0">Share Your Photos</h1>
              </div>
              <span class="badge bg-secondary">May 18, 2026</span>
            </div>

            <% if (!hasAccess) { %>
              <div class="alert alert-warning">This page is locked. Enter the access code to continue.</div>
              <form method="POST" action="/media/access">
                <div class="mb-3">
                  <label for="code" class="form-label">Access Code</label>
                  <input type="password" class="form-control" id="code" name="code" placeholder="Enter code" required />
                </div>
                <button class="btn btn-wedding-primary" type="submit">Unlock</button>
              </form>
            <% } else if (!isOpen) { %>
              <div class="alert alert-info">
                Uploads will open on the wedding day. Please check back later.
              </div>
            <% } else { %>
              <p class="text-muted">Drop your favorite photos from the wedding. No need to add namesâ€”just memories.</p>
              <form id="mediaUploadForm" action="/media/upload" method="POST" enctype="multipart/form-data">
                <div class="mb-3">
                  <label for="note" class="form-label">Notes (optional)</label>
                  <textarea class="form-control" id="note" name="note" rows="2" placeholder="Any context for the files"></textarea>
                </div>
                <div class="mb-3">
                  <label for="mediaFiles" class="form-label">Photos</label>
                  <input type="file" class="form-control" id="mediaFiles" name="mediaFiles" multiple accept="image/*" required />
                  <div class="form-text">Up to 10 photos per upload.</div>
                </div>
                <button type="submit" class="btn btn-wedding-primary">Upload</button>
                <div class="mt-3" id="mediaAlert" style="display: none;"></div>
              </form>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    crossorigin="anonymous"
  ></script>
  <script>
    const form = document.getElementById('mediaUploadForm');
    const alertBox = document.getElementById('mediaAlert');
    if (form && alertBox) {
      form.addEventListener('submit', async function(e) {
        e.preventDefault();
        alertBox.style.display = 'none';
        alertBox.className = 'alert';

        const data = new FormData(form);
        try {
          const res = await fetch('/media/upload', { method: 'POST', body: data });
          const json = await res.json();
          if (!res.ok) throw new Error(json.error || 'Upload failed');
          alertBox.classList.add('alert-success');
          alertBox.textContent = 'Thanks! Files uploaded successfully.';
          alertBox.style.display = 'block';
          form.reset();
        } catch (err) {
          alertBox.classList.add('alert-danger');
          alertBox.textContent = err.message;
          alertBox.style.display = 'block';
        }
      });
    }
  </script>
</body>
</html>
