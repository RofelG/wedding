<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Wedding Photo Drop</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <meta name="robots" content="noindex,nofollow" />
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />
  <link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css"
  />
  <link rel="stylesheet" href="/css/styles.css" />
  <style>
    .drop-zone {
      background: rgba(255, 255, 255, 0.04);
      cursor: pointer;
    }
    .drop-zone--over {
      border-color: var(--wedding-primary) !important;
      background: rgba(255, 111, 145, 0.08);
    }
  </style>
</head>
<body class="rsvp-page">
  <%- include('partials/nav', { navLinks, brandHref: '/' }) %>

  <div class="container py-5" style="margin-top: 7rem;">
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <div class="card shadow-sm rsvp-card-shell">
          <div class="card-body p-4 p-lg-5">
            <div class="d-flex justify-content-between align-items-center mb-3">
              <div>
                <p class="text-uppercase text-muted small mb-1">Rofel & Julie Ann</p>
                <h1 class="h4 mb-0">Share Your Photos</h1>
              </div>
              <span class="badge bg-secondary">May 18, 2026</span>
            </div>

            <% if (!hasAccess) { %>
              <div class="alert alert-warning">This page is locked. Enter the access code to continue.</div>
              <form method="POST" action="/media/access">
                <div class="mb-3">
                  <label for="code" class="form-label">Access Code</label>
                  <div class="position-relative">
                    <input type="password" class="form-control pe-5" id="code" name="code" placeholder="Enter code" required />
                    <button type="button" class="btn btn-sm btn-outline-secondary position-absolute top-50 end-0 translate-middle-y me-2 toggle-password" data-target="code" aria-label="Show access code">
                      <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" viewBox="0 0 16 16" aria-hidden="true">
                        <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8z"/>
                        <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5z"/>
                      </svg>
                    </button>
                  </div>
                </div>
                <button class="btn btn-wedding-primary" type="submit">Unlock</button>
              </form>
            <% } else if (!isOpen) { %>
              <div class="alert alert-info">
                Uploads will open on the wedding day. Please check back later.
              </div>
            <% } else { %>
              <p class="text-muted">Drop your favorite photos from the wedding. No need to add namesâ€”just memories.</p>
              <form id="mediaUploadForm" action="/media/upload" method="POST" enctype="multipart/form-data">
                <div class="mb-3">
                  <label for="note" class="form-label">Notes (optional)</label>
                  <textarea class="form-control" id="note" name="note" rows="2" placeholder="Any context for the files"></textarea>
                </div>
                <div class="mb-3">
                  <label class="form-label">Photos</label>
                  <div id="dropZone" class="drop-zone border border-2 border-dashed rounded-4 p-4 text-center">
                    <p class="mb-1">Drag and drop photos here, or click to browse</p>
                    <small class="text-muted">Up to 30 photos (images only)</small>
                    <input type="file" class="form-control" id="mediaFiles" name="mediaFiles" multiple accept="image/*" required hidden />
                  </div>
                </div>
                <button type="submit" class="btn btn-wedding-primary">Upload Images</button>
                <div class="mt-3" id="mediaAlert" style="display: none;"></div>
              </form>
              <div class="mt-4">
                <h2 class="h6">Your uploads this session</h2>
                <div class="row g-3" id="mediaPreview"></div>
              </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%- include('partials/footer') %>

  <script src="/js/media.js"></script>
  <script>
    document.querySelectorAll(".toggle-password").forEach((btn) => {
      btn.addEventListener("click", () => {
        const targetId = btn.dataset.target;
        const input = document.getElementById(targetId);
        if (!input) return;
        const isHidden = input.type === "password";
        input.type = isHidden ? "text" : "password";
        btn.setAttribute("aria-label", isHidden ? "Hide access code" : "Show access code");
        const icon = btn.querySelector("i");
        if (icon) {
          icon.classList.toggle("bi-eye", !isHidden);
          icon.classList.toggle("bi-eye-slash", isHidden);
        }
      });
    });
  </script>
</body>
</html>
